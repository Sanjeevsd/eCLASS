<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Discussion.DiscussionPostActivity"
        android:background="@android:color/white"
>

    <EditText
            android:layout_width="0dp"
            android:background="@color/colorPrimaryLight"
            android:layout_height="150dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/discussion_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/Discussion_title"
            android:hint="Conetent Of Discussion" android:layout_marginTop="8dp"/>
    <Button
            android:text="Post"
            android:background="@color/login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/discussion_post_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/discussion_edittext"
            app:layout_constraintStart_toStartOf="@+id/discussion_edittext"
            app:layout_constraintEnd_toEndOf="@+id/discussion_edittext" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Discussion_title" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Title of Discussion"/>
</androidx.constraintlayout.widget.ConstraintLayout>