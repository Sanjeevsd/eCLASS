<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/material_bg">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp" app:cardElevation="10dp" android:id="@+id/sun_card"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp" app:srcCompat="@drawable/sunday"
                android:id="@+id/ivsun" android:background="@android:color/transparent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"

                android:contentDescription="@string/imagesun"/>

        <TextView
                android:text="@string/textview"
                android:paddingStart="30dp"
                android:textAlignment="center"
                android:layout_width="286dp"
                android:layout_height="61dp" android:id="@+id/tvsun"
                android:layout_marginStart="70dp"
                android:textColor="@color/recent_notice_word"
                android:textSize="30sp"
                android:textStyle="bold"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="80dp" app:cardBackgroundColor="@color/colorPrimaryLight" app:cardCornerRadius="5dp"
            app:contentPadding="10dp" app:cardElevation="10dp"
            android:id="@+id/mon_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sun_card">
        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp" app:srcCompat="@drawable/monday"
                android:id="@+id/ivmon" android:background="@android:color/transparent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/imagesun"/>
        <TextView
                android:text="@string/textview"
                android:paddingStart="30dp"
                android:layout_width="286dp"
                android:layout_height="61dp" android:id="@+id/tvmon"
                android:layout_marginStart="70dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/recent_notice_word"
                android:textStyle="bold"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp" app:cardBackgroundColor="@color/colorPrimaryLight" app:cardCornerRadius="5dp"
            app:contentPadding="10dp" app:cardElevation="10dp" android:id="@+id/tue_card" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mon_card" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp" app:srcCompat="@drawable/tuesday"
                android:id="@+id/ivtue" android:background="@android:color/transparent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/imagesun"/>
        <TextView
                android:text="@string/textview"
                android:paddingStart="30dp"
                android:layout_width="286dp"
                android:textAlignment="center"
                android:layout_height="61dp" android:id="@+id/tvtue"
                android:layout_marginStart="70dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/recent_notice_word"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp" app:cardBackgroundColor="@color/colorPrimaryLight" app:cardCornerRadius="5dp"
            app:contentPadding="10dp" app:cardElevation="10dp" android:id="@+id/wed_card" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tue_card" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp" app:srcCompat="@drawable/wednesday"
                android:id="@+id/ivwed" android:background="@android:color/transparent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/imagesun"/>
        <TextView
                android:text=""
                android:paddingStart="30dp"

                android:layout_width="286dp"
                android:gravity="center_vertical"
                android:layout_height="61dp" android:id="@+id/tvwed"
                android:layout_marginStart="70dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/recent_notice_word"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/colorPrimaryLight" app:cardCornerRadius="5dp"
            app:contentPadding="10dp" app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wed_card"
            android:id="@+id/thu_card" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp" app:srcCompat="@drawable/thursday"
                android:id="@+id/ivthu" android:background="@android:color/transparent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/imagesun"/>
        <TextView
                android:text="@string/textview"
                android:paddingStart="30dp"
                android:layout_width="286dp"
                android:layout_height="61dp" android:id="@+id/tvthu"
                android:layout_marginStart="70dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/recent_notice_word"
        />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>